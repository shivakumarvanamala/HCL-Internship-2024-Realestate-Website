<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Create a new Listing</h3>
            <br /><br />
            <form
                method="POST"
                action="/listings"
                novalidate
                class="needs-validation"
                enctype="multipart/form-data"
            >
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input
                        class="form-control"
                        name="listing[title]"
                        placeholder="Enter a catchy title"
                        type="text"
                        required
                    />
                    <div class="valid-feedback">Title looks good</div>
                    <div class="invalid-feedback">Title should be valid</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label"
                        >Description</label
                    >
                    <textarea
                        name="listing[description]"
                        type="text"
                        class="form-control"
                        required
                    ></textarea>
                    <div class="valid-feedback">Description looks good</div>
                    <div class="invalid-feedback">
                        Description should be valid
                    </div>
                </div>

                <!-- <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input
                        name="listing[image]"
                        class="form-control"
                        type="text"
                        placeholder="Enter image url"
                    />
                </div> -->
                <div class="mb-3">
                    <label for="image" class="form-label"
                        >Upload Listing Image</label
                    >
                    <input
                        name="listing[image]"
                        class="form-control"
                        type="file"
                        required
                    />
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input
                            name="listing[price]"
                            class="form-control"
                            placeholder="Enter price"
                            required
                        />
                        <!-- type="number" -->
                        <!-- <div class="valid-feedback">Title looks good</div> -->
                        <div class="invalid-feedback">
                            Price should be valid
                        </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input
                            name="listing[country]"
                            placeholder="Enter country"
                            type="text"
                            class="form-control"
                            required
                        />
                        <!-- <div class="valid-feedback">Title looks good</div> -->
                        <div class="invalid-feedback">
                            Country should be valid
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input
                        name="listing[location]"
                        placeholder="Enter location"
                        type="text"
                        class="form-control"
                        required
                    />
                    <div class="invalid-feedback">Location should be valid</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="location" class="form-label"
                            >Property Type</label
                        >
                        <select
                            name="listing[propertyType]"
                            class="form-control"
                        >
                            <option value="Sell">Sell</option>
                            <option value="Rent">Rent</option>
                            <option value="Open-for-both">Open for both</option>
                        </select>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Select Category</label>
                        <select name="listing[category]" class="form-control">
                            <option value="Trending">Trending</option>
                            <option value="Rentals">Rentals (PG)</option>
                            <option value="Iconic-cities">Iconic-cities</option>
                            <option value="Sharing">Sharing</option>
                            <option value="Society">Society</option>
                            <option value="Premium">Premium</option>
                            <option value="Pools">Pools</option>
                        </select>
                    </div>
                </div>

                <button class="btn btn-dark add-btn mb-3 mt-3">Add</button>
            </form>
        </div>
    </div>
</body>
